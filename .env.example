# Example environment variables for Docker deployment
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_DB=dripiq
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# Application Environment
NODE_ENV=production

# Docker Registry (for CI/CD)
DOCKER_USERNAME=your-dockerhub-username

# Client API URL (for production deployment)
VITE_API_URL=https://your-api-domain.com

# Server Environment Variables (add to your hosting platform)
DATABASE_URL=postgresql://postgres:password@postgres:5432/dripiq
REDIS_URL=redis://redis:6379
JWT_SECRET=your-jwt-secret-here
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-email@domain.com
OPENAI_API_KEY=your-openai-api-key
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key

# Client Environment Variables (build-time variables)
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key